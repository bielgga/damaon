{
    "extends": "./tsconfig.node.json",
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "dist/server",
      "rootDir": ".",
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["shared/*"],
        "@server/*": ["server/*"]
      }
    },
    "include": [
      "server/**/*",
      "shared/**/*"
    ],
    "exclude": ["node_modules", "src", "dist"]
}