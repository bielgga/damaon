{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "../dist/server",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["../src/*"],
        "@shared/*": ["../shared/*"]
      }
    },
    "include": [
      "**/*",
      "../shared/**/*"
    ],
    "exclude": ["node_modules", "../dist"]
}